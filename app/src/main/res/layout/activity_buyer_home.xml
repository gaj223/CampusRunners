<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.user.campusrunners.RunnerHome">

    <android.support.v7.widget.GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout"
        android:layout_width="wrap_content"
        android:layout_height="444dp"
        app:layout_constraintTop_toBottomOf="parent">

        <ImageButton
                android:id="@+id/bookButton"
                android:layout_width="188dp"
                android:layout_height="188dp"
                android:contentDescription="@string/bookstore"
                app:layout_row="0"
                app:srcCompat="@drawable/bookstore"
                app:layout_column="1" />

        <ImageButton
                android:id="@+id/chickfilaButton"
                android:layout_width="188dp"
                android:layout_height="188dp"
                android:contentDescription="@string/chick_fil_a"
                app:layout_row="0"
                app:srcCompat="@drawable/chickfila"
                app:layout_column="0" />

        <ImageButton
                android:id="@+id/podButton"
                android:layout_width="188dp"
                android:layout_height="188dp"
                android:contentDescription="@string/pod"
                app:layout_row="1"
                app:srcCompat="@drawable/pod"
                app:layout_column="1" />

        <ImageButton
            android:id="@+id/pizzaButton"
            android:layout_width="188dp"
            android:layout_height="188dp"
            android:contentDescription="@string/papa_john_s"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/pizza" />
    </android.support.v7.widget.GridLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ffcf9e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/buyer_navigation" >

    </android.support.design.widget.BottomNavigationView>

</android.support.constraint.ConstraintLayout>