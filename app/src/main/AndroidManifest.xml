<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.campusrunners">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".RunnerHome"
            android:label="@string/title_activity_runner_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AcceptJob"
            android:label="@string/title_activity_accept_job" />
        <activity
            android:name=".RunnerDetailAccepted"
            android:label="@string/title_activity_runner_detail_accepted" />
        <activity
            android:name=".ViewAllRunnerOrders"
            android:label="@string/title_activity_view_all_runner_orders" />
        <activity
            android:name=".IndividualCompletedOrder"
            android:label="@string/title_activity_individual_completed_order" />
        <activity
            android:name=".RateTheBuyer"
            android:label="@string/title_activity_rate_the_buyer" />


    </application>

</manifest>